# Multi-user Research Lab Configuration
# Designed for shared research environments

# Container settings
CONTAINER_NAME=unsloth-research-lab
JUPYTER_PASSWORD=research_lab_2024

# SSH access for multiple researchers
SSH_HOST_PORT=2224
USER_PASSWORD=lab_access_2024

# Shared API keys (set these as environment variables on host)
HF_TOKEN=${SHARED_HF_TOKEN}
WANDB_API_KEY=${SHARED_WANDB_KEY}

# Large model configuration for research
MODEL_NAME=unsloth/llama-3-70b-bnb-4bit
MODEL_CACHE_DIR=/workspace/shared-models

# Research dataset
DATASET_NAME=research_dataset_v2

# Research-optimized training settings
MAX_SEQ_LENGTH=4096
BATCH_SIZE=1
GRADIENT_ACCUMULATION_STEPS=16
LEARNING_RATE=1e-4
NUM_TRAIN_EPOCHS=5

# High-end resource allocation
MEMORY_LIMIT=64G
MEMORY_RESERVATION=32G
GPU_COUNT=all

# Shared research directories
HOST_NOTEBOOK_DIR=./research-notebooks
HOST_DATA_DIR=./research-datasets

# Ports for additional services
TENSORBOARD_HOST_PORT=6007