# Production Configuration Example
# Copy to .env and modify as needed

# Container settings
CONTAINER_NAME=unsloth-production
JUPYTER_PASSWORD=super_secure_password_here
USER_PASSWORD=strong_user_password

# Security - SSH key access
SSH_KEY=ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... # Your public key here
SSH_HOST_PORT=2222

# API Keys
HF_TOKEN=hf_your_token_here
WANDB_API_KEY=your_wandb_key_here

# Model configuration
MODEL_NAME=unsloth/llama-3-8b-bnb-4bit
MODEL_CACHE_DIR=/workspace/models

# Training settings optimized for production
MAX_SEQ_LENGTH=4096
BATCH_SIZE=1
GRADIENT_ACCUMULATION_STEPS=8
LEARNING_RATE=1e-4
NUM_TRAIN_EPOCHS=3

# Resource limits for production server
MEMORY_LIMIT=32G
MEMORY_RESERVATION=16G
GPU_COUNT=all

# Custom directories
HOST_NOTEBOOK_DIR=./production-notebooks
HOST_DATA_DIR=./production-data