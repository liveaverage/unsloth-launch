# ==============================================================================
# UNSLOTH DOCKER COMPOSE ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and customize as needed

# ==============================================================================
# CONTAINER CONFIGURATION
# ==============================================================================
CONTAINER_NAME=unsloth-notebook

# Use official image (default) or custom build
USE_OFFICIAL_IMAGE=true

# ==============================================================================
# PORTS
# ==============================================================================
TENSORBOARD_HOST_PORT=6006

# ==============================================================================
# JUPYTER CONFIGURATION (Official Unsloth Docker Environment Variables)
# ==============================================================================
JUPYTER_PORT=8888
JUPYTER_HOST_PORT=8888
JUPYTER_PASSWORD=

# SSH Configuration (optional)
SSH_HOST_PORT=2222
SSH_KEY=
USER_PASSWORD=unsloth2024

# ==============================================================================
# NOTEBOOK SELECTION
# ==============================================================================
# Option 1: Auto-download from URL
NOTEBOOK_URL=

# Option 2: Use local notebook file
NOTEBOOK_PATH=

# Auto-start the notebook when container launches
AUTO_START_NOTEBOOK=false

# ==============================================================================
# GPU CONFIGURATION
# ==============================================================================
GPU_COUNT=all
NVIDIA_VISIBLE_DEVICES=all
CUDA_VISIBLE_DEVICES=all

# ==============================================================================
# VOLUME MOUNTS
# ==============================================================================
# Host directories to mount (optional)
HOST_NOTEBOOK_DIR=./custom-notebooks
HOST_DATA_DIR=./data

# ==============================================================================
# API KEYS (Optional)
# ==============================================================================
# Hugging Face token for private models
HF_TOKEN=

# Weights & Biases for experiment tracking
WANDB_API_KEY=

# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================
# Default model to load (can be overridden in specific notebook configs)
MODEL_NAME=
MODEL_CACHE_DIR=/workspace/models

# Dataset configuration
DATASET_NAME=

# ==============================================================================
# TRAINING HYPERPARAMETERS
# ==============================================================================
MAX_SEQ_LENGTH=2048
LOAD_IN_4BIT=true
BATCH_SIZE=2
GRADIENT_ACCUMULATION_STEPS=4
LEARNING_RATE=2e-4
NUM_TRAIN_EPOCHS=1

# ==============================================================================
# RESOURCE LIMITS
# ==============================================================================
MEMORY_LIMIT=16G
MEMORY_RESERVATION=8G